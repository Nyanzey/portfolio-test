---
import htmlIcon from "../icons/html.astro"
import cssIcon from "../icons/css.astro"

const TAGS = {
    HTML: {
        name: 'HTML',
        class: 'bg-orange-500 text-white',
        icon: htmlIcon
    },
    CSS: {
        name: 'CSS',
        class: 'bg-white text-black',
        icon: cssIcon
    }
}

const PROJECTS = [
    {
        title: 'Genshin Brother',
        description: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce id ultricies sapien. ligula magna vitae neque. Etiam non ante et ante pellentesque pharetra eget eget mi. Duis blandit viverra interdum.',
        link: 'https://genshin.hoyoverse.com/en/',
        github: 'https://github.com/',
        image: '/projects/genshin48.webp',
        tags: [TAGS.HTML, TAGS.CSS]
    }
]
---

{
    PROJECTS.map(({title, description, tags, image}) => (
        <article>
            <h3 class="text-2xl font-semibold mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-4 flex-row ">
                {tags.map(tag => (
                    <li>
                        <span class={`${tag.class} flex gap-x-3 rounded-full text-xs py-2 px-2 items-center mb-4`}>
                            <tag.icon class="size-6"></tag.icon>
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/15" src={image} alt="Screenshot of project"/>
        </article>
    ))
}
